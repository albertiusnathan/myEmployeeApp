<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EmployeeDetail"
    >


    <!--    header-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"

        android:background="@color/cardview_dark_background"

        android:text="@string/myemployee_app"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/name_detail"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textAlignment="textStart"
        />


    <fragment
        android:id="@+id/map_detail"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />

    <TextView
        android:id="@+id/city_detail"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textAlignment="textStart"
        />

    <TextView
        android:id="@+id/phone_detail"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textAlignment="textStart"
        />

    <TextView
        android:id="@+id/regist_detail"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textAlignment="textStart"
        />

    <TextView
        android:id="@+id/email_detail"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textAlignment="textStart"
        />


    <TextView
        android:id="@+id/addto_address"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:text="@string/add_to_address_book"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textColor="#0050ff"
        android:textAlignment="center"
        />
    
    

</LinearLayout>