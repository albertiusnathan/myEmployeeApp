<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_gravity="center"

    >
<!--    header-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"

        android:background="@color/cardview_dark_background"

        android:text="@string/myemployee_app"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        />

    <!--    bottom menu-->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp" />

    <LinearLayout
        android:id="@+id/bottom_navbar"
        android:layout_width="360dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/search_btn_style"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn_employee_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_person_search_48"
            android:background="#00FFFFFF"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:hint="@string/employee_search"
            android:fontFamily="sans-serif"
            android:textColorHint="@color/white"
            android:textSize="12sp"
            />

        <Button
            android:id="@+id/btn_saved_addresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_person_pin_48"
            android:background="#00FFFFFF"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="30dp"
            android:hint="@string/saved_addresses"
            android:fontFamily="sans-serif"
            android:textColorHint="@color/white"
            android:textSize="12sp"
            />

    </LinearLayout>

</LinearLayout>